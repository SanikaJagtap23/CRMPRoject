@model POTermsAndConditions
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Create POTermsAndConditionsName</h5>
        <form asp-action="Create" method="post">

            <div class="form-group">
                <label asp-for="POTermsAndConditionsName">POTermsAndConditionsName</label>
                <div>
                    <input asp-for="POTermsAndConditionsName" class="form-control" />
                </div>
            </div>
            <div class="form-check mb-3">
                <input asp-for="ActiveFlag" class="form-check-input" type="checkbox" />
                <label asp-for="ActiveFlag" class="form-check-label">Is Active</label>
            </div>

            <div class="col-12">
                <label class="form-label">Select BillingCompany  </label>
                <select class="form-select" asp-for="BillingCompanyID" asp-items="@ViewBag.BillingCompanies">
                    <option>Select BillingComies</option>
                </select>

            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

