@model IEnumerable<Discount>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Discount  List</h5>

        <a asp-action="Create" class="btn btn-primary">Create</a>
        <hr />

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th>DiscountName</th>
                    <th>ActiveFlag</th>
                    <th>IsPercentil</th>
                    <th>DiscountAmt</th>
                    <th>BillingCompanyName</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int srno = 1;
                }
                @foreach (var temp in Model)
                {
                    <tr>
                        <th scope="row">@srno</th>
                        <th>@temp.DiscountName</th>
                        <th>@temp.ActiveFlag ? "Active" : "Inactive"</th>
                        <th>@temp.IsPercentile</th>
                        <th>@temp.DiscountAmount</th>
                        <th>@temp.BillingCompany.CompanyName</th>


                        <td>
                            <a asp-action="Edit" asp-route-id="@temp.DiscountID" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@temp.DiscountID" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                    srno++;
                }
            </tbody>
        </table>
    </div>
</div>
