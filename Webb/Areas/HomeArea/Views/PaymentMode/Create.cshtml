@model PaymentMode
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Create PaymentMode</h5>
        <form asp-action="Create" method="post">

            <div class="form-group">
                <label asp-for="PaymentModeName">PaymentModeName</label>
                <div>
                    <input asp-for="PaymentModeName" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="IsActiveFlag">IsActiveFlag</label>
                <div>
                    <input asp-for="IsActiveFlag" class="form-control" />
                </div>
            </div>        
            <div class="col-12">
                <label class="form-label">Select BillingCompany  </label>
                <select class="form-select" asp-for="BillingCompanyID" asp-items="@ViewBag.BillingCompanies">
                    <option>Select BillingComies</option>
                </select>

            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
