@model CustomerORParty

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h4 class="text-primary fw-bold text-center">Edit Customer / Party</h4>
            <hr />

            <form class="row g-3" asp-action="Edit" method="post">
                <input type="hidden" asp-for="CustomerORPartyID" />

                <div class="col-md-6">
                    <label asp-for="CustomerName" class="form-label fw-bold">Customer Name</label>
                    <input asp-for="CustomerName" class="form-control" placeholder="Enter customer name" required />
                </div>

                <div class="col-md-6">
                    <label asp-for="ContactPersonName" class="form-label fw-bold">Contact Person</label>
                    <input asp-for="ContactPersonName" class="form-control" placeholder="Enter contact person name" required />
                </div>

                <div class="col-md-6">
                    <label asp-for="EmailID" class="form-label fw-bold">Email ID</label>
                    <input asp-for="EmailID" type="email" class="form-control" placeholder="Enter email" required />
                </div>

                <div class="col-md-6">
                    <label asp-for="MobileNo" class="form-label fw-bold">Mobile Number</label>
                    <input asp-for="MobileNo" class="form-control" placeholder="Enter mobile number" required />
                </div>

                <div class="col-md-6">
                    <label asp-for="WebsiteUrl" class="form-label fw-bold">Website URL</label>
                    <input asp-for="WebsiteUrl" class="form-control" placeholder="Enter website URL" />
                </div>

                <div class="col-md-6">
                    <label asp-for="PinCode" class="form-label fw-bold">Pin Code</label>
                    <input asp-for="PinCode" class="form-control" placeholder="Enter pin code" required />
                </div>

                <div class="col-md-12">
                    <label asp-for="Address" class="form-label fw-bold">Address</label>
                    <textarea asp-for="Address" class="form-control" rows="2" placeholder="Enter address" required></textarea>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Select City</label>
                    <select class="form-select" asp-for="CityID" asp-items="@ViewBag.Cities">
                        <option selected disabled>Select City</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Select Customer Category</label>
                    <select class="form-select" asp-for="CustomerCategoryID" asp-items="@ViewBag.CustomerCategory">
                        <option selected disabled>Select Category</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label asp-for="OpeningBalance" class="form-label fw-bold">Opening Balance</label>
                    <input asp-for="OpeningBalance" type="number" class="form-control" placeholder="Enter opening balance" />
                </div>

                <div class="col-md-6">
                    <label class="form-check-label fw-bold mt-4">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" /> Active
                    </label>
                </div>

                <div class="col-12 text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4">Save</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
