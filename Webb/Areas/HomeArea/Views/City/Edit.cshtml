@model City
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Create City</h5>
        <form asp-action="Edit" method="post">
           <input type=" hidden" asp-for="CityID" />

            <div class="form-group">
                <label asp-for="CityName">Cityname</label>
                <div>
                    <input asp-for="CityName" class="form-control" />
                </div>
            </div>
            <div class="col-12">
                <label class="form-label">Select States </label>
                <select class="form-select" asp-for="StateID" asp-items="@ViewBag.States">
                    <option>Select States</option>
                </select>

            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

