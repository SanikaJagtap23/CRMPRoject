@model CustomerCategory
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Create CustomerCategory</h5>
        <form asp-action="Edit" method="post">
            <input type="hidden"asp-for="CustomerCategoryID" />

            <div class="form-group">
                <label asp-for="CustomerCategoryName">CustomerCategoryName</label>
                <div>
                    <input asp-for="CustomerCategoryName" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ActiveFlag">ActiveFlag</label>
                <div>
                    <input asp-for="ActiveFlag" class="form-control" />
                </div>
            </div>
            <div class="col-12">
                <label class="form-label">Select BillingCompany </label>
                <select class="form-select" asp-for="BillingCompanyID" asp-items="@ViewBag.BillingCompanies">
                    <option>Select Country</option>
                </select>

            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>