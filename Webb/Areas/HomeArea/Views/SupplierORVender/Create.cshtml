@model SupplierORVender

<div class="container mt-4">
    <div class="card shadow border-0 rounded">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Create Supplier or Vendor</h5>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row">
                   
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="SupplierORVenderName" class="form-label">Supplier/Vendor Name</label>
                            <input asp-for="SupplierORVenderName" class="form-control" placeholder="Enter Name" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Address</label>
                            <input asp-for="Address" class="form-control" placeholder="Enter Address" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="EmailID" class="form-label">Email</label>
                            <input asp-for="EmailID" class="form-control" type="email" placeholder="Enter Email" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="MobileNo" class="form-label">Mobile No</label>
                            <input asp-for="MobileNo" class="form-control" type="tel" placeholder="Enter Mobile Number" />
                        </div>
                    </div>

                    
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="WebSiteUrl" class="form-label">Website URL</label>
                            <input asp-for="WebSiteUrl" class="form-control" placeholder="Enter Website URL" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="PinCode" class="form-label">Pincode</label>
                            <input asp-for="PinCode" class="form-control" placeholder="Enter Pincode" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ContactPersonName" class="form-label">Contact Person Name</label>
                            <input asp-for="ContactPersonName" class="form-control" placeholder="Enter Contact Person Name" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="OpeningBalanceDate" class="form-label">Opening Balance Date</label>
                            <input asp-for="OpeningBalanceDate" class="form-control" type="date" />
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Select City</label>
                    <select class="form-select" asp-for="CityID" asp-items="@ViewBag.Cities">
                        <option>Select City</option>
                    </select>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label">Is Active</label>
                </div>

                <div class="col-12 text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4">Save</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
