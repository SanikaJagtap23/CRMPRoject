@model IEnumerable<SupplierORVender>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold text-primary">Supplier / Vendor List</h4>
        <a asp-action="Create" class="btn btn-primary">+ Add New Supplier</a>
    </div>

    <div class="row">
        @foreach (var temp in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow border-0 rounded">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@temp.SupplierORVenderName</h5>
                            <span class="badge @(temp.IsActive ? "bg-success" : "bg-danger")">
                                @(temp.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>

                        <p class="text-muted small mb-2">@temp.Address</p>

                        <div class="mb-2">
                            <strong>Email:</strong> @temp.EmailID
                        </div>

                        <div class="mb-2">
                            <strong>Mobile:</strong> @temp.MobileNo
                        </div>

                        <div class="mb-2">
                            <strong>Contact Person:</strong> @temp.ContactPersonName
                        </div>

                        <div class="mb-2">
                            <strong>Opening Balance:</strong> @temp.OpeningBalanceDate
                        </div>

                        <div class="mb-3">
                            <strong>Website:</strong>
                            @if (!string.IsNullOrEmpty(temp.WebSiteUrl))
                            {
                                <a href="@temp.WebSiteUrl" target="_blank" class="text-primary text-decoration-none">Visit</a>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="Edit" asp-route-id="@temp.SupplierORVenderID" class="btn btn-warning btn-sm mx-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@temp.SupplierORVenderID" class="btn btn-danger btn-sm mx-1">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
