@model SupplierORVender

<div class="container mt-4">
    <div class="card shadow border-0 rounded">
        <div class="card-body">
            <h4 class="fw-bold text-primary mb-3">Edit Supplier / Vendor</h4>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="SupplierORVenderID" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="SupplierORVenderName" class="form-label fw-bold">Supplier Name</label>
                            <input asp-for="SupplierORVenderName" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-bold">Address</label>
                            <input asp-for="Address" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="EmailID" class="form-label fw-bold">Email</label>
                            <input asp-for="EmailID" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="MobileNo" class="form-label fw-bold">Mobile No</label>
                            <input asp-for="MobileNo" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="WebSiteUrl" class="form-label fw-bold">Website</label>
                            <input asp-for="WebSiteUrl" class="form-control" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="PinCode" class="form-label fw-bold">Pin Code</label>
                            <input asp-for="PinCode" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ContactPersonName" class="form-label fw-bold">Contact Person</label>
                            <input asp-for="ContactPersonName" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="OpeningBalanceDate" class="form-label fw-bold">Opening Balance Date</label>
                            <input asp-for="OpeningBalanceDate" class="form-control" type="date" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Select City</label>
                            <select class="form-select" asp-for="CityID" asp-items="@ViewBag.Cities">
                                <option>Select City</option>
                            </select>
                        </div>

                        <div class="form-check mt-4">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label fw-bold">Active</label>
                        </div>
                    </div>
                </div>

                <div class="col-12 text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4">Save</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
