@model SalesInvoiceDto

<h4>Delete Sales Invoice</h4>
<p>Are you sure you want to delete this sales invoice?</p>
<div>
    <label>Invoice No:</label> @Model.InVoiceNo
</div>

<!-- Display other invoice details -->

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="SalesInvoiceID" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a href="@Url.Action("Index")" class="btn btn-primary">Cancel</a>