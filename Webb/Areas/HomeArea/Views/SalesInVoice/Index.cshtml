<div class="card">
    <div class="card-body">
        <h3 class="fw-bolder">Sales Invoices</h3>
        <a asp-action="Create" class="btn btn-outline-info btn-rounded btn-fw mb-4">Create New</a>

        <div>
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Unpaid Invoices</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Paid Invoices</button>
                </li>
            </ul>
            <div class="tab-content" id="pills-tabContent" style="max-width:100%">
                <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">

                    <div>
                        @await Component.InvokeAsync("UnpaidInvoiceVC")
                    </div>

                </div>
                <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">

                    @await Component.InvokeAsync("PaidInvoiceVC")

                </div>
            </div>
        </div>

    </div>
</div>



