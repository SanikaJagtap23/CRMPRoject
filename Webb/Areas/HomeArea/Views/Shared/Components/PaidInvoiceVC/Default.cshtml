@model IEnumerable<SalesInvoice>

<div class="container mt-4">
    @foreach (var temp in Model)
    {
        <div class="card mb-4 shadow border-0 rounded">

            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Invoice No: @temp.InVoiceNo</h5>
                <span class="badge bg-success p-2">PAID</span>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Invoice Date:</strong> @temp.SalesInVoiceDate.ToString("d")</p>
                        <p><strong>Customer Name:</strong> @temp.CustomerORParty.CustomerName</p>
                        <p><strong>Billing Company:</strong> @temp.BillingCompany.CompanyName</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Sales Order No:</strong> @temp.SalesOrderNo</p>
                        <p><strong>Sales Order Date:</strong> @temp.SalesOrderDate.ToString("d")</p>
                        <p><strong>Payment Type:</strong> @temp.InVoicePaymentType</p>
                    </div>
                </div>

                <div class="mt-3">
                    <h5 class="text-success font-weight-bold">Total Amount: $@temp.TotalAmount</h5>
                </div>

                <div class="d-flex justify-content-end mt-3">
                    <a asp-action="Delete" asp-route-id="@temp.SalesInvoiceID" class="btn btn-danger btn-sm mx-1">Delete</a>
                    <a asp-action="Detail" asp-route-id="@temp.SalesInvoiceID" class="btn btn-info btn-sm mx-1">Details</a>
                </div>
            </div>
        </div>
    }
</div>
